<Page class="page"
    loaded="loaded"  
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:accordion="nativescript-accordion">
    
    <Page.actionBar>
      <ActionBar title="Edit Menu"/>
    </Page.actionBar>
    
    <GridLayout rows="auto,*">

        <GridLayout row="0" columns="*, auto" class="add-bar">
            <TextField text="{{category}}" id="category" hint="Enter a new category name" col="0" />
            <Image src="~/images/add.png" tap="addCategory" col="1"/>
        </GridLayout>
        
        <GridLayout id="customAccordion" row="1">
            
            <accordion:Accordion items="{{categories}}" itemTapped="tapped" itemContentTap="childTapped" headerTextBold="true" class="p-15" >
                <accordion:Accordion.headerTemplate>
                    <GridLayout columns="auto,*">
                        <Label class = "acc_header_label" text="{{categoryName}}" col="0"/>
                        <Image src="~/images/add.png" tap="addItem" col="1" addToCategory="{{id}}"/>
                    </GridLayout>
                </accordion:Accordion.headerTemplate>
        
                <accordion:Accordion.itemHeaderTemplate>
                    <StackLayout>
                        <GridLayout columns="auto,*">   
                            <Label text="{{name}}" col="0"/>
                            <Label text="{{price}}" col="1"/>
                        </GridLayout>
                    </StackLayout>
                </accordion:Accordion.itemHeaderTemplate>
                
                <accordion:Accordion.itemContentTemplate>
                    <StackLayout>
                        <GridLayout>
                            <Label text="{{description}}" />
                        </GridLayout>
                    </StackLayout>
                </accordion:Accordion.itemContentTemplate>
                        
            </accordion:Accordion>

        </GridLayout>
    </GridLayout>
    
</Page>