<Page class="page"
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:customAccordion="../../shared/menuCategoriesView">
    <Page.actionBar>
        <ActionBar title="Menu">
            <ActionItem
                ios.systemIcon="4" ios.position="left"
                 android.systemIcon="ic_input_add" android.position="actionBar">
            </ActionItem>
        </ActionBar>
    </Page.actionBar>

    <GridLayout>
      <GridLayout row="0" columns="*, auto" class="add-bar">
        <TextField text="{{ categoryToAdd }}" id="category" hint="Enter a new category name" col="0" />
        <Image src="~/images/add.png" tap="add" col="1"/>
      </GridLayout>
    </GridLayout>

    
    

</Page>